<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Medical Cases</h1>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Case ID
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Images
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            SCEs
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @cases.each do |medical_case| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">
                <%= medical_case.case_id %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= medical_case.image_paths&.size || 0 %> image(s)
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= medical_case.structured_causal_explanations.count > 0 ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= medical_case.structured_causal_explanations.count %> SCE(s)
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <%= link_to "View", case_path(medical_case.case_id), class: "text-blue-600 hover:text-blue-900 font-medium" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @cases.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500">No cases found. Run <code class="bg-gray-100 px-2 py-1 rounded">rails cases:import</code> to import cases.</p>
    </div>
  <% end %>
</div>
