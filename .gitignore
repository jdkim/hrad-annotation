# Environment files with secrets
.env
.env.*
!.env.example

# Ignore bundler config
/.bundle

# Ignore the default SQLite database
/db/*.sqlite3
/db/*.sqlite3-*

# Ignore all logfiles and tempfiles
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore storage
/storage/*
!/storage/.keep

# Ignore master key for decrypting credentials
/config/master.key
/config/credentials/*.key

# Ignore uploads
/public/uploads

# Ignore node_modules
/node_modules

# Ignore assets builds
/app/assets/builds/*
!/app/assets/builds/.keep

# Ignore vendor
/vendor/*
!/vendor/.keep

# Ignore data folder (contains large image files)
/data/*
!/data/.keep

# Editor files
*~
.*.swp
